<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:locc="clr-namespace:RGR.Models"
        xmlns:vm="clr-namespace:RGR.ViewModels"
        xmlns:controls="using:RGR.Views.Elements">
  <Design.PreviewWith>
    <controls:Element_In />
  </Design.PreviewWith>

  <Style Selector="controls|Element_In">
    <!-- Set Defaults -->
    <Setter Property="Template">
      <ControlTemplate>
        <Canvas Width="90" Height="110"  Background="Transparent">
          <Rectangle Width="{Binding $parent[Canvas].Width}" Height="{Binding $parent[Canvas].Height}" Fill="Transparent"/>
          <Border  BorderBrush="Black" BorderThickness="2" Width="{Binding $parent[Canvas].Width}" Height="{Binding $parent[Canvas].Height}" ClipToBounds="True">
            <StackPanel Height="{Binding $parent[Border].Height}">
              <TextBlock HorizontalAlignment="Center" FontSize="20" Text="INPUT"></TextBlock>
              <TextBlock HorizontalAlignment="Center" FontSize="20" Text=""></TextBlock>
              <TextBlock HorizontalAlignment="Center" FontSize="20" Text="{TemplateBinding Power}"></TextBlock>
            </StackPanel>
          </Border>
        </Canvas>
      </ControlTemplate>
    </Setter>
  </Style>
</Styles>
